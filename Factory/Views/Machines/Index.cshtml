@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>Machine Management</h2>

@if (@Model.Count == 0)
{
  <h5>There have been no machines added to this application.</h5>
}
else
{
  <ul>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.Type}", "Details", new { id = machine.MachineId })</li>
    }
  </ul>
}

<p>
  @Html.ActionLink("Add Machine", "Create")<br>
  @Html.ActionLink("Return Home", "Index", "Home")
</p>