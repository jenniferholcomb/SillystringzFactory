@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
@using Factory.Models

<h3>Add Engineer</h3>

<h5>Add an engineer to @Html.DisplayFor(model => model.Type)</h5>

@if (@Engineers.Count == 0)
{
  <p><em>-- there are no engineers to add --</em></p>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select Engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
  }
}

<p>@Html.ActionLink("Back to Machine List", "Index")</p>