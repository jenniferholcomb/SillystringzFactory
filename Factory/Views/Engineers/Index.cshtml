@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>Engineer Management</h2>

@if (@Model.Count == 0)
{
  <p><em>-- you have no engineers entered in this system --</em></p>
}
else
{
  <ul>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{@engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>
}

<p>
  @Html.ActionLink("Add Engineer", "Create")<br>
  @Html.ActionLink("Return Home", "Index", "Home")
</p>


